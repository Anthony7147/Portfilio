<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_notebook_url %>

<% @notebooks_items.each do |notebooks_item| %>
  <p><%= link_to notebooks_item.title, notebook_show_path(notebooks_item) %></p>
  <p><%= notebooks_item.subtitle %></p>
  <p><%= notebooks_item.body %></p>
  <%= image_tag notebooks_item.thumb_image unless notebooks_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_notebook_path(notebooks_item) %>
  <td><%= link_to 'Delete Portfolio Item', notebook_path(notebooks_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
